{% import "profil/avatar.html.twig" as avatar %}

<article class="post">
	<div class='post-user'>
		{{ avatar.avatar('avatar-post', app.user) }}
		<span>{{app.user.email}}</span>
	</div>

	<h2>{{ post.titre }}</h2>

	{% if post.image %}
		<img class="post-image" src="/assets/images/posts/{{ post.image }}" alt="">
	{% endif %}

	<p>
		{{ post.contenu }}
	</p>
</article>
